<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tileClickLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="7dp"
    android:focusable="true">

    <ScrollView
        android:id="@+id/sv_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="12dp"/>

            <LinearLayout
                android:id="@+id/ll_titles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_provider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/provider"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv_average"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/average"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv_best"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/best"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_values"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_titles"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_infoOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv_infoTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv_infoThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue"
                    android:textSize="10dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@id/sv_bubble"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"/>
</RelativeLayout>